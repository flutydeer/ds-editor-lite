/* Panel Tool Bar */
ClipEditorToolBarView>QPushButton {
    padding: 0px;
    border: none;
    background: none;
    border-radius: 6px;
}

ClipEditorToolBarView>QPushButton:checked {
    background-color: #9BBAFF;
}

ClipEditorToolBarView>QPushButton:checked:hover {
    background-color: rgb(169, 196, 255);
}

ClipEditorToolBarView>QPushButton:hover {
    background: #1AFFFFFF;
}

ClipEditorToolBarView>QPushButton:pressed {
    background: #10FFFFFF;
}

ClipEditorToolBarView>QPushButton#btnMute {
    background: #10FFFFFF;
}

ClipEditorToolBarView>QPushButton#btnMute:hover {
    background: #1AFFFFFF;
}

ClipEditorToolBarView>QPushButton#btnMute:checked,
ClipEditorToolBarView>QPushButton#btnMute:checked:hover {
    background-color: #FF9B9D;
}

ClipEditorToolBarView>QPushButton#btnArrow {
    icon: url(:svg/icons/cursor_24_filled_white.svg)
}

ClipEditorToolBarView>QPushButton#btnArrow:checked {
    icon: url(:svg/icons/cursor_24_filled.svg)
}

ClipEditorToolBarView>QPushButton#btnBeam {
    icon: url(:svg/icons/beam_24_filled_white.svg)
}

ClipEditorToolBarView>QPushButton#btnBeam:checked {
    icon: url(:svg/icons/beam_24_filled.svg)
}

ClipEditorToolBarView>QPushButton#btnNotePencil {
    icon: url(:svg/icons/edit_24_filled_white.svg)
}

ClipEditorToolBarView>QPushButton#btnNotePencil:checked {
    icon: url(:svg/icons/edit_24_filled.svg)
}

ClipEditorToolBarView>QPushButton#btnNoteEraser {
    icon: url(:svg/icons/eraser_24_filled_white.svg)
}

ClipEditorToolBarView>QPushButton#btnNoteEraser:checked {
    icon: url(:svg/icons/eraser_24_filled.svg)
}

ClipEditorToolBarView>QPushButton#btnPitchAnchor {
