LineEdit#leClipName {
    background: #0FC7D8FF;
    border: none;
    height: 28px;
    border-radius: 0px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
}

LineEdit#leClipName:focus {
    background: #10FFFFFF;
}

ComboBox#cbClipLanguage {
    background: #0FC7D8FF;
    border: none;
    height: 28px;
    border-radius: 0px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

/* TimelineView */
TimelineView#pianoRollTimelineView {
    border-top-right-radius: 6px;
}

/* PianoKeyboardView */
PianoKeyboardView {
    qproperty-whiteKeyColor: #DADBE0;
    qproperty-blackKeyColor: #3B3F47;
    qproperty-dividerColor: #AAACB5;
}

/* PianoRollView */
PianoRollView {
    /* background: #1C1D1E; */
    /* border-radius: 6px; */
    border-radius: 0px;
}

PianoRollGraphicsView {
    qproperty-noteFontPixelSize: 13;
    qproperty-whiteKeyColor: #292C36;
    qproperty-blackKeyColor: #23262E;
    qproperty-octaveDividerColor: #1C2024;
}

